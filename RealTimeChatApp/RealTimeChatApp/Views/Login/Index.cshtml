@model RealTimeChatApp.Models.User

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Login" asp-action="submit">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Mail" class="control-label"></label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="form-group error">

                    @if (@ViewBag.NotValidUser != null)
                    {

                        <label> Mail or Password not matched !</label>
                    }
                </div>
            </div>
        </form>
    </div>
</div>